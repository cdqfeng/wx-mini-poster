page {
	height: 100%;
}
.container {
	display: flex;
	flex-direction: column;
	height: 100%;
}
.poster {
	flex: 1;
	width: 100%;
}
.card {
	display: flex;
	justify-content: space-between;
	align-items: center;
	padding: 30rpx;
	height: 200rpx;
}
.card .name {
	font-size: 36rpx;
	color: #31312E;
}
.card image {
	width: 200rpx;
	height: 200rpx;
}
.btns {
	padding: 30rpx;
}
.btn {
	width: 90%;
	height: 80rpx;
	font-size: 32rpx;
	color: #fff;
	background: rgba(255, 0, 0, 0.7);
	border-radius: 40rpx;
}
.red {
	background: rgb(238, 111, 111);
}
.cover {
	position: fixed;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	background: rgba(0, 0, 0, 0.9);
}
.canvas-box {
	position: absolute;
	left: 50%;
	top: 50%;
	margin-left: -40%;
	margin-top: -230px;
	width: 80%; 
	height: 460px;
	background: #fff;
}
.canvas-box canvas {
	width: 100%;
	height: 400px;
}
.cover .btn {
	position: absolute;
	bottom: 20rpx;
	left: 50%;
	margin-left: -45%;
	width: 90%;
	height: 80rpx;
	line-height: 80rpx;
	text-align: center;
	box-sizing: border-box;
}
.btn-close {
	position: absolute;
	top: 0;
	right: 0;
	width: 80rpx;
	height: 80rpx;
	line-height: 80rpx;
	font-size: 40rpx;
	color: rgb(255, 0, 0);
	text-align: center;
	background: transparent;
}
.btn-close::after {
  border: none
}